<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/linearLayoutFormMap"
    android:orientation="vertical">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:context=".FormMapsActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgSelectedOffice"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/btnChooseOffice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Choose" />

    </LinearLayout>

    <EditText
        android:id="@+id/edtNameOffice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtDescriptionOffice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tvLocationOffice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location" />

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnInsertOffice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insert" />

            <Button
                android:id="@+id/btnUpdateOffice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="update" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnConsultOffice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consult" />
            <EditText
                android:id="@+id/edtIdOffice"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:hint="ID"
                android:ems="10"
                android:inputType="textPersonName" />
            <Button
                android:id="@+id/btnDeleteOffice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delete" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
